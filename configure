#!/bin/bash

################################
##         DEFINITION         ##
################################
SRC_VIMRC="vimrc"
DEST_VIMRC=".vimrc"

DPKGS_COMPILER="make gcc g++ python"
DPKGS_CROSS_COMPILER="gcc-aarch64-linux-gnu g++-aarch64-linux-gnu qemu"
DPKGS_TOOL="vim htop openssh-server net-tools tree"
DPKGS="$DPKGS_COMPILER $DPKGS_CROSS_COMPILER $DPKGS_TOOL"

################################
##            MAIN            ##
################################

cp $PWD/$SRC_VIMRC $HOME/$DEST_VIMRC

sudo apt update
sudo apt -y upgrade
sudo apt install -y $DPKGS
