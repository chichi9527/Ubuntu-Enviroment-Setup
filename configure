#!/bin/bash

################################
##         DEFINITION         ##
################################
SRC_VIMRC="vimrc"
DEST_VIMRC=".vimrc"

DPKGS_TOOL="vim htop openssh-server"
DPKGS_COMPILER="gcc g++ python"
DPKGS="$DPKGS_TOOLS $DPKGS_COMPILER"

################################
##            MAIN            ##
################################

cp $PWD/$SRC_VIMRC $HOME/$DEST_VIMRC

sudo apt update
sudo apt -y upgrade
sudo apt -y install $DEBIAN_PACKAGES
